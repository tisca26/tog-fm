                <div class="row">
                    <div class="col-lg-12"> 
                        <div class="form-group">
                            <label>Roles creados</label><br />
                            <?php foreach($roles as $role): ?>
                                <div class="col-md-6">
                                    <a href="#" onclick="cargaContenido('menus_rol', <?php echo $role->id; ?>, '<?php echo $role->nombre; ?>')"><?php echo $role->nombre; ?></a>
