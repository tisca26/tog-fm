<script>    
    function cargaContenido(idElemento, idRol, nombreRol){
        var elemento = $("#" + idElemento);
        $.ajax({                  
            type: 'POST',
            url: "<?php echo URL::to('/') . '/roles/menus'; ?>",
            data: {idRol : idRol, nombreRol : nombreRol},
            success: function(msg){
                elemento.html(msg);
            }
        });
    }
</script>
<?php $__env->stopSection(); ?>
